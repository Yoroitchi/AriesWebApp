@using System.Linq;
@using Hyperledger.Aries.Features.IssueCredential;
@model CredentialViewModel

@{
    int i = 0;
}

<table class="table-borderless" cellpadding="10">
    <thead>
        <tr>
            <th scope="col">CredDefID (ID on ledger)</th>
            <th scope="col">Created at</th>
            <th scope="col">State</th>
            <th scope="col">Attributes key</th>
            <th scope="col">Attributes value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CredentialAttributesValues)
        {
        <tr>
            @if (i == 0)
            {
                <td>
                    @Model.CredDefId
                </td>
                <td>
                    @Model.CreatedAt
                </td>
                <td>
                    @Model.State
                </td>
                i++;
            }
            else
            {
                <td></td>
                <td></td>
                <td></td>
            }
            @if (!item.Name.Equals("") && !item.Value.Equals(""))
            {
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Value
                </td>
            }

        </tr>
        }
        @if (Model.State == CredentialState.Requested)
        {
            <tr>
                <td>
                    <a class="btn btn-primary mt-3" role="button" asp-controller="Credentials" asp-action="ProcessRequest" asp-route-id="@Model.CredentialRecordId">Send credential</a>
                </td>
            </tr>
        }
    </tbody>
</table>
