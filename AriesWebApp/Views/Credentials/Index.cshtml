@using System.Linq;
@using Hyperledger.Aries.Features.IssueCredential;
@model CredentialsViewModel;

<a class="btn btn-primary mt-3" role="button" asp-controller="Credentials" asp-action="GetCredDef">Get credential definition</a>
<a class="btn btn-primary mt-3" role="button" asp-controller="Credentials" asp-action="SendCredDef">Send credential definition</a>

@if (Model.Credentials.Any())
{
    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Recipient</th>
                <th scope="col">Schema</th>
                <th scope="col">Date</th>
                <th scope="col">State</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Credentials)
            {
                <tr>
                    <td>
                            <a asp-area="" asp-controller="Credentials" asp-action="Details" asp-route-id="@item.CredentialId">@(item.CredentialId ?? item.CredentialId)</a>
                    </td>
                    <td>
                        @item.ConnectionId
                    </td>
                    <td>
                        @item.SchemaId
                    </td>
                    <td>
                        @item.CreatedAtUtc.Value.ToLocalTime()
                    </td>
                    <td>
                        @item.State
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
